{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "A comprehensive platform of something related to anything.",
  "type": "module",
  "main": "dist/balancer/index.js",
  "author": "Yaron Koresh",
  "types": "dist/balancer/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/balancer/index.d.ts",
      "default": "./dist/balancer/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "check": "npm run fix-deps && npm run fix-code && npm run build",
    "clean": "node -e \"import { execSync } from 'child_process'; import fs from 'fs'; const paths = ['./node_modules']; paths.forEach(p => fs.rmSync(p, { recursive: true, force: true })); execSync('npm cache clean --force', { stdio: 'inherit' })\"",
    "fix-deps": "(node tools/fix-deps.js && npm install --ignore-scripts || (cd .))",
    "fix-code": "npm run generate-types && npm run lint:fix && npm run lint:check && npm run format:fix && npm run format:check && npm run test",
    "build": "npm run build:bundle && npm run build:client",
    "prepare": "husky",
    "build:bundle": "tsup",
    "build:client": "node dist_config/generate-client.js",
    "coverage": "vitest run --coverage --passWithNoTests",
    "test": "npm run test:run && npm run test:types",
    "test:run": "vitest run",
    "test:types": "npm run test:client && npm run test:server && npm run test:balancer",
    "test:client": "tsc --noEmit --project tsconfig/client.json",
    "test:server": "tsc --noEmit --project tsconfig/server.json",
    "test:balancer": "tsc --noEmit --project tsconfig/balancer.json",
    "lint:check": "eslint src/ test/ tools/",
    "lint:fix": "(eslint src/ test/ tools/ --fix || (cd .))",
    "format:fix": "(prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"dist_config/**/*.*\" \"tools/**/*.*\" || (cd .))",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"dist_config/**/*.*\" \"tools/**/*.*\"",
    "generate-types": "(tsx tools/generate-types.ts || (cd .))"
  },
  "lint-staged": {
    "**/*": [
      "node -e \"require('child_process').spawn('npm', ['run', 'fix-deps'], { shell: true, stdio: 'inherit' })\"",
      "node -e \"require('child_process').spawn('npm', ['run', 'fix-code'], { shell: true, stdio: 'inherit' })\"",
      "node -e \"require('child_process').spawn('npm', ['run', 'build'], { shell: true, stdio: 'inherit' })\""
    ]
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/YaronKoresh/typescript.git"
  },
  "bugs": {
    "url": "https://github.com/YaronKoresh/typescript/issues"
  },
  "homepage": "https://github.com/YaronKoresh/typescript#readme",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "archiver": "npm:archiver@7.0.1",
    "compression": "npm:compression@1.8.1",
    "dotenv": "npm:dotenv@17.2.3",
    "express": "npm:express@5.2.1",
    "express-rate-limit": "npm:express-rate-limit@8.2.1",
    "fast-csv": "npm:fast-csv@5.0.5",
    "geometry-interfaces": "npm:geometry-interfaces@2.0.0",
    "glob": "npm:glob@13.0.1",
    "helmet": "npm:helmet@8.1.0",
    "ioredis": "npm:ioredis@5.9.2",
    "multer": "npm:multer@2.0.2",
    "unzipper": "npm:unzipper@0.12.3"
  },
  "devDependencies": {
    "@eslint/js": "npm:@eslint/js@10.0.1",
    "@types/node": "npm:@types/node@25.2.0",
    "@vitest/coverage-v8": "npm:@vitest/coverage-v8@4.0.18",
    "axios": "npm:axios@1.13.5",
    "eslint": "npm:eslint@9.39.2",
    "eslint-config-prettier": "npm:eslint-config-prettier@10.1.8",
    "eslint-plugin-import-x": "npm:eslint-plugin-import-x@4.16.1",
    "eslint-plugin-n": "npm:eslint-plugin-n@17.23.2",
    "eslint-plugin-promise": "npm:eslint-plugin-promise@7.2.1",
    "eslint-plugin-security": "npm:eslint-plugin-security@3.0.1",
    "globals": "npm:globals@17.3.0",
    "husky": "npm:husky@9.1.7",
    "jsonc-eslint-parser": "npm:jsonc-eslint-parser@2.4.2",
    "lint-staged": "npm:lint-staged@16.2.7",
    "node-domexception": "file:./shim/domexception-shim",
    "postcss": "npm:postcss@8.5.6",
    "postcss-modules": "npm:postcss-modules@6.0.1",
    "prettier": "npm:prettier@3.8.1",
    "tar": "file:./shim/tar-shim",
    "ts-morph": "npm:ts-morph@24.0.0",
    "tslib": "npm:tslib@2.8.1",
    "tsup": "npm:tsup@8.5.1",
    "tsx": "npm:tsx@4.21.0",
    "typescript": "npm:typescript@5.9.3",
    "typescript-eslint": "npm:typescript-eslint@8.54.0",
    "vitest": "npm:vitest@4.0.18"
  },
  "overrides": {
    "express-rate-limit": {
      "express": "5.2.1"
    },
    "express": {
      "qs": "6.14.2"
    }
  }
}
