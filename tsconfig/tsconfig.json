{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "declaration": true
  },
  "include": ["../src/**/*", "../test/**/*", "../tools/**/*"],
  "exclude": ["../node_modules", "../dist"]
}